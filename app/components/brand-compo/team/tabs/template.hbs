<div class="row">
  <div class="col-md-3 col-sm-12 reviewfow_tabs">
    <ul class="nav nav-tabs" role="tablist">
      <li class="{{if isTeamUsersActive 'active'}}">
        {{#link-to "brand.edit.team.list" class="text-uppercase text-center" }}
          Users {{field-description title="The list of team members for this brand." classNames="pull-right"}}
        {{/link-to}}
      </li>
      <li class="{{if isTeamRolesActive 'active'}}">
        {{#link-to "brand.edit.team.roles.list" class="text-uppercase text-center" }}
          Roles {{field-description title="The list of Roles defined for this brand. Roles define the abilities within this brand in Contetto that a user assigned to it will have." classNames="pull-right"}}
        {{/link-to}}
      </li>
      <li class="{{if isTeamInvitesActive 'active'}}">
        {{#link-to "brand.edit.team.invites.list" class="text-uppercase text-center" }}
          Invites {{field-description title="The list of pending invitations for this brand. You can remove invitations before they are accepted." classNames="pull-right"}}
        {{/link-to}}
      </li>
    </ul>
  </div>

  <div class="col-md-9 col-sm-12">
    <div class="tab-content">
      <div class="tab-pane active">
        {{yield}}
      </div>
    </div>
  </div>
</div>
