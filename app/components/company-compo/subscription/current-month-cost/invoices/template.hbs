{{#unless (eq monthlyInvoices.length 0)}}
  <table class="table table-bordered">
    <thead>
      <th>Date</th>
      <th>Item Purchased</th>
      <th>Price(Proration Factor)</th>
    </thead>
    <tbody>
      {{#if (eq planInvoices.length 0)}}
        {{#unless company.isTrial}}
          <th colspan="1">Plan</th>
          <td colspan="2">No plan found!</td>
        {{/unless}}
      {{else}}
        <th colspan="3">Plan</th>
        {{#each planInvoices as |invoice|}}
          {{#each invoice.lineItems as |lineItem|}}
            <tr>
              <td>{{invoice.formatDate}}</td>
              <td>{{lineItem.name}}</td>
              <td>${{lineItem.cost}}({{lineItem.factor}})</td>
            </tr>
          {{/each}}
        {{/each}}
      {{/if}}
      {{#if (not-eq addonInvoices.length 0)}}
        <th colspan="3">Addons</th>
        {{#each addonInvoices as |invoice|}}
          {{#each invoice.lineItems as |lineItem|}}
            <tr>
              <td>{{invoice.formatDate}}</td>
              <td>{{lineItem.name}}</td>
              <td>${{lineItem.cost}}({{lineItem.factor}})</td>
            </tr>
          {{/each}}
        {{/each}}
      {{/if}}
      <tr>
        <th colspan="2">Total</th>
        <td>${{monthlyCosts}}</td>
      </tr>
    </tbody>
  </table>
{{/unless}}
