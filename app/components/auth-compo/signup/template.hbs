<form class="form-horizontal text-center" {{action "signup" changeset on="submit"}} autocomplete="off">
  <div class="form-group {{if changeset.error.email "has-error"}}">
    <div class="input-group">
      <div class="input-group-addon"><i class="fa fa-user"></i></div>
      {{one-way-email changeset.email
                      class="form-control"
                      placeholder="E-mail"
                      update=(action (mut changeset.email))
      }}
    </div>

    {{#each changeset.error.email.validation as |error|}}
      <span class="help-block text-left error">{{error}}</span>
    {{/each}}
  </div>

  <div class="form-group {{if changeset.error.password "has-error"}}">
    <div class="input-group">
      <div class="input-group-addon"><i class="fa fa-lock"></i></div>
      {{one-way-password changeset.password
                         class="form-control"
                         placeholder="Password"
                         update=(action (mut changeset.password))
      }}
    </div>

    {{#each changeset.error.password.validation as |error|}}
      <span class="help-block text-left error">{{error}}</span>
    {{/each}}
  </div>

  <div class="form-group {{if changeset.error.confirmPassword "has-error"}}">
    <div class="input-group">
      <div class="input-group-addon"><i class="fa fa-lock"></i></div>
      {{one-way-password changeset.confirmPassword
                         class="form-control"
                         placeholder="Confirm Password"
                         update=(action (mut changeset.confirmPassword))
      }}
    </div>

    {{#each changeset.error.confirmPassword.validation as |error|}}
      <span class="help-block text-left error">{{error}}</span>
    {{/each}}
  </div>

  <div class="form-group {{if changeset.error.firstName "has-error"}}">
    <div class="input-group">
      <div class="input-group-addon"><i class="fa fa-user"></i></div>
      {{one-way-input changeset.firstName
                      class="form-control"
                      placeholder="First Name"
                      update=(action (mut changeset.firstName))
      }}
    </div>

    {{#each changeset.error.firstName.validation as |error|}}
      <span class="help-block text-left error">{{error}}</span>
    {{/each}}
  </div>

  <div class="form-group {{if changeset.error.lastName "has-error"}}">
    <div class="input-group">
      <div class="input-group-addon"><i class="fa fa-user"></i></div>
      {{one-way-input changeset.lastName
                      class="form-control"
                      placeholder="Last Name"
                      update=(action (mut changeset.lastName))
      }}
    </div>

    {{#each changeset.error.lastName.validation as |error|}}
      <span class="help-block text-left error">{{error}}</span>
    {{/each}}
  </div>

  <div class="form-group {{if changeset.error.phoneNumber "has-error"}}">
    <div class="input-group">
      <div class="input-group-addon"><i class="fa fa-phone"></i></div>
      {{one-way-input changeset.phoneNumber
                      class="form-control"
                      placeholder="Phone Number"
                      update=(action (mut changeset.phoneNumber))
      }}
    </div>

    {{#each changeset.error.phoneNumber.validation as |error|}}
      <span class="help-block text-left error">{{error}}</span>
    {{/each}}
  </div>
  
  <div class="form-group">
    <div class="input-group">
     
      {{input type="checkbox" id="privacyBox" checked=privacyAccept}}
     I have read, understood and agree with Contetto's <a href="https://contetto.com/privacy" target=_blank>Privacy Policy</a>.
    </div>
  </div>
  <div class="form-group">
    <div class="input-group">
     
            {{input type="checkbox" id="termsBox" checked=termsAccept}}
     I have read, understood and agree to comply with Contetto's <a href="https://contetto.com/terms-and-conditions" target=_blank>Terms and Conditions of Use</a>.
    </div>
  </div>
<div class="form-group {{if changeset.error.lastName "has-error"}}">
    <div class="input-group">
      <div class="input-group-addon"><i class="fa fa-ticket"></i></div>
      {{one-way-input inviteCode
                      class="form-control"
                      placeholder="Invite Code (Signup at Contetto.com)"
                      update=(action (mut inviteCode))
      }}
    </div>

    {{#each changeset.error.lastName.validation as |error|}}
      <span class="help-block text-left error">{{error}}</span>
    {{/each}}
  </div>
  <div class="form-group">
    <button class="create-btn w-100" type="submit" role="button" disabled={{isSubmitted}}>
      {{if isSubmitted "Signing up..." "Sign up"}}
    </button>
  </div>

  <div class="form-group text-center">
    <span class="forget-pass">Already have account ?</span>
  </div>

  <div class="form-group">
    {{#link-to "signin" class="login-btn m-x-1"}}Sign In{{/link-to}}
  </div>
</form>