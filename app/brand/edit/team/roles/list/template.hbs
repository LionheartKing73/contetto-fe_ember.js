<div class="table-responsive">
  <table class="table table-bordered table-striped text-center">
    <thead>
      <tr class="text-uppercase">
        <th class="text-center">Role</th>
        <th class="text-center">Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each model.roles as |role|}}
        <tr>
          <td>{{role.name}}</td>
          <td>
            {{#if (has-brand-permission 'manageTeam')}}
              {{#if role.isEditable}}
                {{#link-to 'brand.edit.team.roles.edit' role.id}}
                  <u>Change Permission</u>
                {{/link-to}} |
                <a href="javascript:void(0)" class="text-danger" {{action 'removeRole' role.id}}>
                  <u>Remove</u>
                </a>
              {{else}}
                {{#link-to 'brand.edit.team.roles.edit' role.id}}
                  <u>View Permission</u>
                {{/link-to}}
              {{/if}}
            {{/if}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
{{#if (has-brand-permission 'manageTeam')}}
<div class="center-block submit-btn m-t-1">
  {{#link-to "brand.edit.team.roles.add"  class="btn btn-success  text-uppercase" }}Add Role{{/link-to}}
</div>
{{/if}}
