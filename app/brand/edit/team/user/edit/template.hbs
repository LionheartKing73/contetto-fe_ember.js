{{#brand-compo/team/user/tabs isTeamDetailsActive=true member=model.member}}
  <!-- <h3 class="model-heading">Brand add</h3> -->
  <div class="col-md-12">
    <form class="form-horizontal" {{action "updateMember" on="submit"}}>
      <div class="form-group">
        <label for="username" class="col-md-3 control-label">User Email</label>
        <div class="col-md-9">
          {{input type="text" class="form-control" id="username" placeholder="Enter Email" value=model.member.email readonly=true}}
        </div>
      </div>
      <div class="form-group">
        <label for="assignRole" class="col-md-3 control-label">User Role</label>
        <div class="col-md-9">

          {{one-way-select model.member.brandRole
                           optionValuePath="id"
                           optionLabelPath="name"
                           class='form-control'
                           prompt="Please select role"
                           promptIsSelectable=false
                           options=(sort-by 'name' model.roles)
                           update=(action (mut model.member.brandRole))}}

          {{#each model.errors.role as |error|}}
            <span class="help-block">{{error.message}}</span>
          {{/each}}
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
          <button type="submit" class="btn btn-success  text-uppercase">Update</button>
        </div>
      </div>
    </form>
  </div>
{{/brand-compo/team/user/tabs}}
