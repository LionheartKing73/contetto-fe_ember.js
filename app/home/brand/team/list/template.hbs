<div class="row">
  <div class="col-md-3 col-sm-12 reviewfow_tabs">
    <ul class="nav nav-tabs" role="tablist">
	    <li class="{{if model.isTeamUsersActive 'active'}}">{{#link-to "brand.edit.team.list" class="text-uppercase text-center"}}Users{{/link-to}}</li>
	    <li class="{{if model.isTeamRolesActive 'active'}}">{{#link-to "brand.edit.team.roles.list" class="text-uppercase text-center"}}Roles{{/link-to}}</li>
	    <li class="{{if model.isTeamInvitesActive 'active'}}">{{#link-to "brand.edit.team.invites.list" class="text-uppercase text-center"}}Invites{{/link-to}}</li>
    </ul>
  </div>
  <div class="col-md-9 col-sm-12">
    <div class="tab-content">
      <div class="tab-pane active teamlist-page">
        <div class="table-responsive">
          <table class="table table-bordered table-striped text-center">
            <tbody>
              <tr class="text-uppercase">
                <th>Name</th>
                <th>Role</th>
                <th>Action</th>
              </tr>
              {{#each model.members as |member|}}
                <tr>
                  <td>{{member.user.firstName}} {{member.user.lastName}}</td>
                  <td>{{member.brandRole.name}}</td>
                  <td>
                    {{#link-to 'brand.edit.team.user.details' member.id class="text-primary"}}<u>View</u>{{/link-to}}|
                    {{#link-to 'brand.edit.team.user.edit' member.id class="text-primary"}}<u>Edit</u>{{/link-to}}|
                    <a href="#" class="text-danger" {{action 'deleteMember' member.id}}><u>Remove</u></a> |
                    <a href="javascript:void(0);" class="entry-icon cmenu dropdown">
                      <u class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">Action</u>
                 <!--     <ul class="custom-menu dropdown-menu brand-uls">
                        <li><a href="#">Activity Log</a></li>
                        <li><a href="#">New Task</a></li>
                        <li><a href="#">New Chat</a></li>
                        <li><a href="#">New Note</a></li>
                      </ul>-->
                    </a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <div class="center-block submit-btn">
          {{#link-to "brand.edit.team.invite" class="btn btn-success  text-uppercase" }}Add User{{/link-to}}
        </div>
      </div>
    </div>
  </div>
</div>
