<div class="col-md-12">
  {{#with (changeset model.account model.accountValidations) as |changeset|}}
    <form class="form-horizontal">
      <div class="form-group">
        <label class="control-label col-md-3 col-sm-12 col-xs-12 text-right">Title</label>
        <div class="form-group col-md-7 col-sm-12 col-xs-12">
          {{one-way-input changeset.title
            name="title"
            class="form-control"
            update=(action (mut changeset.title))}}

          {{#if changeset.error.title}}
            {{changeset.error.title.validation}}
          {{/if}}
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
          <button
            type="submit"
            class="btn btn-success text-uppercase"
            disabled={{model.isLoading}}
            {{action (route-action 'save' changeset)}}>

            Save
          </button>
          <button
            type="submit"
            class="btn btn-success"
            disabled={{model.isLoading}}
            {{action 'getProvider' model.account.platform model.account}}>

            Renew Token
          </button>
        </div>
      </div>
    </form>
  {{/with}}
</div>