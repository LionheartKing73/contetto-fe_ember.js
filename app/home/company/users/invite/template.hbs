<div class="tab-content">
    <div class="tab-pane active" id="profile">
        <h3 class="model-heading text-center">Invite User</h3>
    	<form class="form-horizontal" {{action "inviteMember" on="submit"}} autocomplete="off">
    		<div class="form-group">
			    <label for="inputEmail3" class="col-sm-3 control-label">User Email</label>
			    <div class="col-sm-9">
			      {{input type="text" class="form-control" id="roleName" value=model.companyInvites.email}}
		          {{#each model.errors.email as |error|}}
		            <span class="help-block">{{error.message}}</span>
		          {{/each}}
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="inputPassword3" class="col-sm-3 control-label">User Role</label>
			    <div class="col-sm-9">
			       {{#x-select value=model.roleId id="role-name" class="form-control"}}
	                    <option value="">Select Role</option>
	                	{{#each model.company.companyRoles as |role|}}
	                        {{#x-option value=role.id }} {{role.name}} {{/x-option}}
	                    {{/each}}       
	                {{/x-select}}
	                {{#each model.errors.role as |error|}}
			            <span class="help-block">{{error.message}}</span>
			        {{/each}}	                
			    </div>
			  </div>
			  <div class="form-group">
			  	<div class="submit-btn col-sm-12">
	                <button type="submit" class="btn btn-success  text-uppercase">Send Invite</button>
	               {{#link-to 'home.company.users' class='btn btn-success text-uppercase'}}Cancel{{/link-to}}
	            </div>
		  	</div>
		  </form>
    </div>
</div>
