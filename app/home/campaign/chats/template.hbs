    <div class="default-model tsk-details wraper-brands">
      <div class="modelbox-body">
        <div class="">
           {{campaign-tabs isChatsTabActive=model.isChatsTabActive}}
          </div>
          <div class="right-panel compaign-chat">
              <!-- Tab panes -->
                <div class="tab-content">
                    <div class="tab-pane active" id="chats">
                       <h4 class="text-center">Member Chats</h4>
                       <div class="table-responsive">
                       <table class="table table-bordered table-striped customTable text-center">
                            <thead>
                                <tr class="text-uppercase">
                                  <th class="text-center">Participants</th>
                                  <th class="text-center">Chat Name</th>
                                  <th class="text-center">Date Range</th>
                                </tr>
                            </thead>

                            <tbody>
                              <tr>
                                  <td>Jenna A & You</td>
                                  <td>Contetto</td>
                                  <td>01-14-16</td>
                              </tr>
                              <tr>
                                  <td>Jenna A & You</td>
                                  <td>Contetto</td>
                                  <td>01-14-16</td>
                              </tr>
                              <tr>
                                  <td>Jenna A & You</td>
                                  <td>Contetto</td>
                                  <td>01-14-16</td>
                              </tr>
                              <tr>
                                  <td>Jenna A & You</td>
                                  <td>Contetto</td>
                                  <td>01-14-16</td>
                              </tr>
                            </tbody>
                        </table>
                      </div>
                       <div class="col-sm-12 col-md 12 col-xs-12 compaign-btns chat-buttons">
                          <ul class="towBtnUl marginTop15">
                            <li><a class="btn btn-success text-uppercase" href="javascript:void()">SHOW MORE</a></li>
                            <li><a class="btn btn-success text-uppercase" href="javascript:void()">NEW CHAT</a></li>
                        </ul>
                      </div>
                    </div>
                    <div class="tab-pane" id="details">
                      <form class="form-horizontal campaignDetailsForm col-md-12">
                            <h4 class="text-heading">Campaign Details</h4>

                              <div class="row">
                              <div class="col-md-6">
                              <div class="form-group">
                                <label class="col-md-4 control-label">Name</label>
                                <div class="col-md-8">
                                  <input type="text" class="form-control" id="inputEmail3" placeholder="Enter Name">
                                </div>
                                </div>
                                 </div>
                                <div class="col-md-6">
                              <div class="form-group">
                                <label class="col-md-4 control-label">Type</label>
                                <div class="col-md-8">
                                  <select class="form-control">
                                <option>Type 1</option>
                                <option>Type 2</option>
                                <option>Type 3</option>
                                <option>Type 4</option>
                                </select>
                                </div>
                                </div>
                                 </div>
                             </div>

                             <div class="row">
                                <div class="col-md-6">
                              <div class="form-group">
                                <label class="col-md-4 control-label">Category</label>
                                <div class="col-md-8">
                                  <select class="form-control">
                                <option>Category 1</option>
                                <option>Category 2</option>
                                <option>Category 3</option>
                                <option>Category 4</option>
                                </select>
                                </div>
                                </div>
                                </div>
                                <div class="col-md-6">
                              <div class="form-group">
                                <label class="col-md-4 control-label">Status</label>
                                <div class="col-md-8">
                                  <select class="form-control">
                                <option>Pending</option>
                                <option>Active</option>
                                <option>Inactive</option>
                                <option>Processing</option>
                                </select>
                                </div>
                                </div>
                                </div>
                                </div>

                                <div class="row">
                                <div class="col-md-6">
                              <div class="form-group">
                                <label class="col-md-4 control-label">Start</label>
                                <div class="col-md-8">
                                  <select class="form-control">
                                <option>01/04/16</option>
                                <option>02/04/16</option>
                                <option>03/04/16</option>
                                <option>04/04/16</option>
                                </select>
                                </div>
                                </div>
                                </div>
                                <div class="col-md-6">
                              <div class="form-group">
                                <label class="col-md-4 control-label">Mode</label>
                                <div class="col-md-8">
                                  <input type="text" class="form-control" placeholder="Enter Mode">
                                </div>
                                </div>
                                </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                              <div class="form-group">
                                <label class="col-md-4 control-label">Attachments</label>
                                <div class="col-md-8">
                                  <input type="text" class="form-control" placeholder="14 Attachments">
                                </div>
                                </div>
                                </div>
                                <div class="col-md-6">
                              <div class="form-group">
                                <label class="col-md-4 control-label">Tags</label>
                                <div class="col-md-8">
                                  <input type="text" class="form-control" placeholder="#april #promotion">
                                </div>
                                </div>
                                </div>
                                </div>

                                <div class="row">
                                <div class="col-md-12">
                              <div class="form-group">
                                <div class="col-md-12 compaign-btns">
                                 <ul class="towBtnUl" style="text-align:left">
                                    <li>
                                     <a class="btn btn-success text-uppercase" href="javascript:void()">Edit Details</a>
                                     </li>
                                    </ul>
                                </div>
                                 </div>
                                  </div>
                                </div>

                      </form>
                    </div>

                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
